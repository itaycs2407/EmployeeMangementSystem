@model Employee

@{ 
    ViewBag.Title = "Create Employee";
}
<form asp-action="Create" asp-controller="home" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name"  class="col-sm-2 col-form-label" placeholder="Name"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email"  class="col-sm-2 col-form-label"placeholder="Email"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Department"  class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select class="custom-select mr-sm-2" asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()"> </select>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
    </div>
</form>