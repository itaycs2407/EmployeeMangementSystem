@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "List Users";
}


<h4>Users List</h4>
@if (Model.Any())
{
    <a asp-controller="Account" asp-action="Register" class="btn btn-primary" style="width:auto">Create New User</a>
    foreach (IdentityUser user in Model)
    {
        <div class="card">
            <div class="card-header">
                User id : @user.Id
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    User name : @user.UserName
                </h5>
                <div class="card-footer">
                    <a asp-controller="Administrator" asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-primary" style="width:auto">Edit</a>
                    <a asp-controller="Administrator" asp-action="DeleteRole" class="btn btn-danger" style="width:auto">Delete</a>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button bellow to create a role
            </h5>
            <a asp-controller="home" asp-action="Create" class="btn btn-primary" style="width:auto">
                Create User
            </a>
        </div>
    </div>
}
